generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
}

enum UserRole {
  READER
  AUTHOR
}

enum MembershipTier {
  FREE
  MEMBER
  SUPPORTER
}

enum NovelStatus {
  ONGOING
  COMPLETED
}

enum ChapterAccess {
  PUBLIC
  MEMBERS
  SUPPORTERS
}

enum PaymentStatus {
  PENDING
  COMPLETED
  FAILED
}

enum PaymentProvider {
  CREEM
  ALIPAY
  WECHAT
}

enum PaymentType {
  RECHARGE
  UPGRADE
}

model User {
  id                  String         @id @default(cuid())
  username            String         @unique
  email               String         @unique
  password            String // Hashed password
  role                UserRole       @default(READER)
  tier                MembershipTier @default(FREE)
  coins               Int            @default(0)
  isSubscribedToEmail Boolean        @default(false)
  resetToken          String?
  resetTokenExpiry    DateTime?
  createdAt           DateTime       @default(now())
  updatedAt           DateTime       @updatedAt

  authoredNovels   Novel[]     @relation("AuthorNovels")
  bookmarks        Bookmark[]
  unlockedChapters UnlockedChapter[]
  comments         Comment[]
  payments         Payment[]
}

model Novel {
  id          String      @id @default(cuid())
  title       String
  description String
  coverUrl    String?
  tags        String[]
  status      NovelStatus @default(ONGOING)
  views       Int         @default(0)
  rating      Float       @default(0.0)
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt

  authorId String
  author   User   @relation("AuthorNovels", fields: [authorId], references: [id])

  chapters  Chapter[]
  bookmarks Bookmark[]
  comments  Comment[]
}

model Chapter {
  id          String        @id @default(cuid())
  title       String
  content     String // Could be large, Text type usually in Postgres
  wordCount   Int
  access      ChapterAccess @default(PUBLIC)
  price       Int           @default(0)
  order       Int
  publishedAt DateTime      @default(now())
  isDraft     Boolean       @default(true)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  novelId String
  novel   Novel  @relation(fields: [novelId], references: [id], onDelete: Cascade)

  unlockedBy       UnlockedChapter[]
  newsletterChecks NewsletterCampaign[]
  comments         Comment[]
}

model UnlockedChapter {
  id        String   @id @default(cuid())
  userId    String
  chapterId String
  unlockedAt DateTime @default(now())

  user    User    @relation(fields: [userId], references: [id], onDelete: Cascade)
  chapter Chapter @relation(fields: [chapterId], references: [id], onDelete: Cascade)

  @@unique([userId, chapterId])
}

model Bookmark {
  id        String   @id @default(cuid())
  userId    String
  novelId   String
  createdAt DateTime @default(now())

  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  novel Novel @relation(fields: [novelId], references: [id], onDelete: Cascade)

  @@unique([userId, novelId])
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  novelId   String?
  novel     Novel?   @relation(fields: [novelId], references: [id], onDelete: Cascade)

  chapterId String?
  chapter   Chapter? @relation(fields: [chapterId], references: [id], onDelete: Cascade)
}

model NewsletterCampaign {
  id          String   @id @default(cuid())
  subject     String
  content     String
  sentAt      DateTime @default(now())
  
  chapterId   String?
  chapter     Chapter? @relation(fields: [chapterId], references: [id])
}

model Payment {
  id          String          @id @default(cuid())
  userId      String
  amount      Float
  currency    String          @default("USD")
  status      PaymentStatus   @default(PENDING)
  provider    PaymentProvider
  type        PaymentType
  
  // For Recharge
  coinsAmount Int?
  
  // For Upgrade
  targetTier  MembershipTier?
  
  // External Reference (e.g., Creem checkout ID, Alipay trade no)
  externalId  String?
  
  createdAt   DateTime        @default(now())
  updatedAt   DateTime        @updatedAt

  user        User            @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model PricingPlan {
  id            String          @id @default(cuid())
  name          String
  description   String?
  price         Float
  currency      String          @default("USD")
  type          PaymentType     // RECHARGE or UPGRADE
  
  // For Upgrade
  tier          MembershipTier?
  
  // For Recharge
  coinsAmount   Int?
  bonusCoins    Int             @default(0)
  
  // For Creem Integration
  creemProductId String?
  
  isActive      Boolean         @default(true)
  createdAt     DateTime        @default(now())
  updatedAt     DateTime        @updatedAt
}
